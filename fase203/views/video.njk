{%extends "layout.njk"%}

{% block content %}
        <div id="wrapper">
            <h1>{{item.title}}</h1>
        </div>

        <section class="video">


                <div class="card" id="{{item.id}}">
                        <div class="card__video-container {{'featured-wrapper' if item.featured}}">
                            <iframe width=800px src={{item.url}}{{item.id}} frameborder="0" allowfullscreen></iframe>
                        </div>
                        <div class="card__content">
                            <p>{{item.title}}</p>
                        </div>
                        <div class="card__info">
                            <p>{{item.duration}}</p>
                            <p class="card__price">{{item.price}}</p>
                        </div>
                </div>


        </section>

{% endblock %}
        
